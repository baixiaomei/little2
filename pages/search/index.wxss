/* pages/search/search.wxss */
/*  */
.container{
  background-color: #f2f2f2;
  padding: 0;
  display:block;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
swiper{
  width:100%;
  height:562.5rpx;
}
.container .slide-image{
  width:100%;
  height:562.5rpx;
}

.type-container{
  width:100%;
  height:88rpx;
  background-color:#fff;
  overflow:hidden;
}
.type-container .type-navbar{
  width:100%;
  height:88rpx;
  white-space: nowrap;
  background:#fff;
}
.type-container .type-navbar .type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size:24rpx;
  line-height: 84rpx;
  text-align:center;
  display:inline-block;
  overflow:hidden;
}
.type-navbar-item{
  border-bottom:4rpx solid #fff;
}
.type-item-on{
  border-bottom:4rpx solid #e64340;
}

.search-view{
  width:100%;
  height:100rpx;
  position:fixed;
  top:0;
  left:0;
  display:flex;
  flex-direction: column;
  justify-content: center;
  z-index:500;
}
.search-view .search-content{
  background:white;
  width:650rpx;
  display:flex;
  flex-direction: row;
  align-items:center;
  padding-top:auto;
  padding-left:20rpx;
  padding-bottom:auto;
  margin:0 auto;
  height:70rpx;
  border-radius:5px 5px;
}
.search-view .search-content .search-icon{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
  z-index:501;
}
.search-view .search-content .search-input{
  width:500rpx;
  font-size:28rpx;
}
.search-view .search-content .search-btn{
  width:150rpx;
  height:70rpx;
  background-color:blueviolet;
  font-size:28rpx;
  align-items:center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position:relative;
}

.notice{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  margin-top:10rpx;
  background:#fff;
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.notice .notice_iteml{
  width:80rpx;
  height:50rpx;
  line-height: 5rpx;
  font-size:26rpx;
  color:#999;
  padding-top:18px; 
  padding-left:25rpx;
  padding-bottom:15rpx;
}
.notice_swiper{
  width:625rpx;
  height:50rpx;
  line-height: 50rpx;
  padding-bottom:15rpx;
  padding-top:15rpx; 
}
.notice_itemr{
  /* padding-left:10rpx; */
  font-size:26rpx;
  overflow:hidden;
  color:#e64340;
  width:635rpx;
  height:50rpx;
  line-height: 50rpx; 
}

.goods-container{
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* box-sizing:content-box; */
  padding:24rpx;
}
.goods-box{
  width:339rpx;
  height:472rpx;
  background-color:#fff;
  overflow:hidden;
  margin-bottom:24rpx;
}
.goods-box .img-box{
  width:339rpx;
  height:339rpx;
  overflow:hidden;
}
.goods-box .img-box image{
  width:330rpx;
  height:399rpx;
}
.goods-box .goods-title{
  width:280rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size:24rpx;
  padding:24rpx 0 0 0;
  color:#000;
  margin-left:24rpx;
}
.goods-box .goods-price{
  width:280rpx;
  overflow:hidden;
  font-size:24rpx;
  padding:24rpx 0;
  color:#e64340;
  margin-left:24rpx;
}